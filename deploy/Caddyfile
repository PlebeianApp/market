# Monitoring endpoints (internal only)
:9000 {
    # Netdata
    reverse_proxy /netdata/* localhost:19999 {
        header_up Host {host}
    }
    
    # Prometheus
    reverse_proxy /prometheus/* localhost:9090 {
        header_up Host {host}
    }
    
    # Grafana
    reverse_proxy /grafana/* localhost:3003 {
        header_up Host {host}
    }
}
