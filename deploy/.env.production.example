# Production Environment Configuration
# Copy this file to .env on the production server

# Node environment
NODE_ENV=production

# Application port
PORT=3001

# Nostr relay URL (your production relay)
APP_RELAY_URL=wss://relay.plebeian.market

# Application private key (hex format)
# Generate with: nak key generate
# NEVER commit the actual key!
APP_PRIVATE_KEY=your-hex-private-key-here

# Optional: NIP-46 relay for remote signing
NIP46_RELAY_URL=wss://relay.nsec.app

# Optional: Media servers
BLOSSOM_SERVER=https://blossom.plebeian.market
NIP96_SERVER=https://media.plebeian.market

# Optional: Monitoring
# SENTRY_DSN=https://...
LOG_LEVEL=info
